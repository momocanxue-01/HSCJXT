<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
	<servlet>
  		<!-- 配置dispatcherServlet的默认名 -->
  		<servlet-name>dispatcherServlet</servlet-name>
  		<!-- 配置DispatcherServlet类的路径 -->
  		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  		<!-- 配置初始化参数(配置加载Springmvc.xml的路径) -->
  		<init-param>
  			<!-- 配置参数名 -->
  			<param-name>contextConfigLocation</param-name>
  			<!-- 配置文件的路径 -->
  			<param-value>classpath:springmvc.xml</param-value>
  		</init-param>
  		<!-- 
  			配置dispatcherServlet加载的优先级
  			(如果不写默认在请求发出时加载，写1表示随着Servlet的加载而加载) 
  		-->
		<load-on-startup>1</load-on-startup>
 	</servlet>

	<!--配置404,500等错误页面-->
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/view/500.jsp</location>
	</error-page>
	<!--<error-page>-->
		<!--<error-code>414</error-code>-->
		<!--<location>/WEB-INF/jsp/errors/error.jsp</location>-->
	<!--</error-page>-->
	<!--<error-page>-->
		<!--<error-code>505</error-code>-->
		<!--<location>/WEB-INF/jsp/errors/error.jsp</location>-->
	<!--</error-page>-->
	<!--<error-page>-->
		<!--<error-code>400</error-code>-->
		<!--<location>/WEB-INF/jsp/errors/error.jsp</location>-->
	<!--</error-page>-->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/view/404.jsp</location>
	</error-page>
  
  	<!-- 配置前端控制器映射路径 -->
	<servlet-mapping>
  		<servlet-name>dispatcherServlet</servlet-name>
  		<!-- "/"表示拦截所有Servlet中的映射 -->
  		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!--添加如下代码表示前端控制器对指定后缀的静态资源访问进行放行-->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.PNG</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.jpg</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.scss</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.</url-pattern>
	</servlet-mapping>

	<!--释放所有assets文件夹中的请求-->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/assets/*</url-pattern>
	</servlet-mapping>

  	<!-- 配置spring配置文件applicationContext.xml -->
	<context-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
  
   <!-- 配置spring中ContextLoaderListener监听器 -->
  	<listener>
  		<listener-class>
  			org.springframework.web.context.ContextLoaderListener
  		</listener-class>
  	</listener>


	<!--配置字符集过滤器-->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
